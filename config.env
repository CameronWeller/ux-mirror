# UX-MIRROR Configuration
# Simple manual UX testing configuration

# AI Vision API Keys (tries Anthropic first, then OpenAI as fallback)
# You only need one of these for content validation to work
OPENAI_API_KEY=
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_VISION_API_KEY=

# Manual screenshot settings  
SCREENSHOT_QUALITY=85
SCREENSHOT_FORMAT=PNG

# Analysis thresholds
RESPONSE_TIME_THRESHOLD=500
UI_CHANGE_THRESHOLD=0.05

# Content validation (AI-powered expectation checking)
CONTENT_VALIDATION_ENABLED=true

# Output settings
SILENT_MODE=true
LOG_LEVEL=WARNING
LOG_TO_FILE=false

# Game/Application target (optional)
GAME_WINDOW_TITLE=
GAME_PROCESS_NAME=

# Manual testing workflow with content validation:
# 1. python simple_ux_tester.py capture --before --expect "login screen with username and password fields"
# 2. Perform your UI interaction
# 3. python simple_ux_tester.py capture --after --expect "dashboard with welcome message and menu"
# 4. python simple_ux_tester.py analyze 